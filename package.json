{
  "name": "smart-gov",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "type-check:employee": "cd apps/employee && npx tsc --noEmit",
    "type-check:admin": "cd apps/admin && npx tsc --noEmit",
    "type-check:apps": "cd apps/employee && npx tsc --noEmit && cd ../admin && npx tsc --noEmit",
    "clean": "turbo clean",
    "dev:employee": "turbo dev --filter=employee",
    "dev:admin": "turbo dev --filter=admin",
    "build:employee": "turbo build --filter=employee",
    "build:admin": "turbo build --filter=admin"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "turbo": "^2.5.8",
    "typescript": "^5"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
